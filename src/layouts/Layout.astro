---
import Header from '../components/Header.astro'
// import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/gabocode/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Gabocode</title>
  </head>

  <body>
    <div class="container">
      <Header />
        <main>
          <slot />
        </main>
    </div>
  </body>
</html>

<style is:global>
  .container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    margin: auto;
    padding: 0;
    min-height: 100vh;
    max-width: 100vw;
  }

  main {
    display: flex;
    flex-direction: column;
    max-width: 100%;
    margin: auto;
    margin-top: 64px;
  }

  pre {
    width: 768px;
    padding: 16px;
    border-radius: 8px;
    margin: 16px 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
  }

  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  p {
    display: block;
    margin-block-start: 0;
    margin-block-end: 0;
    margin-inline-start: 0;
    margin-inline-end: 0;
    text-align: left;
    text-wrap: pretty;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
    margin: 16px 0;
  }
</style>
