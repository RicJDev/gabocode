---
import '../styles/reset.css'
import '../styles/global.css'
import '../styles/colors.css'
import Header from '../components/header/Header.astro'
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/gabocode/favicon.svg"
    />
    <link
      rel="preload"
      href="/gabocode/monaspace/Neon-Var.woff2"
      crossorigin="anonymous"
      as="font"
      type="font/woff2"
    />
    <link
      rel="preload"
      href="/gabocode/monaspace/Argon-Var.woff2"
      crossorigin="anonymous"
      as="font"
      type="font/woff2"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Gabocode</title>
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    margin-top: 32px;
    min-height: 110vh;
  }

  body {
    padding: 32px;
    margin: 0 auto;

    max-width: 100vw;
    min-height: 100vh;
  }
</style>
