---
import '../styles/reset.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import ReferenceList from '../components/ReferenceList.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/gabocode/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Gabocode</title>
  </head>

  <body>
    <div class="container">
      <Header />
        <main>
          <ReferenceList />
          <slot />
        </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  .container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    margin: auto;
    padding: 0;
    min-height: 100vh;
    max-width: 100vw;
  }

  main {
    display: grid;
    grid-template-columns: auto auto;
    width: 100%;
    margin: auto;
    margin-top: 64px;
  }

  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }
</style>
