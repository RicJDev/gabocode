---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Article from '../components/Article.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/gabocode/favicon.svg"
    />
    <link
      rel="preload"
      href="/gabocode/monaspace/Neon-Var.woff2"
      crossorigin="anonymous"
      as="font"
      type="font/woff2"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Gabocode</title>
  </head>

  <body>
    <Header />
    <main>
      <slot>
        <Article />
      </slot>
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    background: var(--background);
    color: var(--text);
    display: grid;
    grid-template-rows: auto 1fr auto;
    max-width: 100vw;
    min-height: 100vh;
  }

  main {
    padding: 0 var(--size-4);
  }
</style>
