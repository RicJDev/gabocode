---
import Burger from '../assets/hamburger.svg'
import '../styles/reset.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import ReferenceList from '../components/ReferenceList.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/gabocode/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Gabocode</title>
  </head>

  <body>
    <div class="container">
      <Header />
      <main>
        <button
          class="open-list"
          onclick="openSideBar()"
        >
          <Burger
            width={32}
            height={32}
          />
        </button>
        <ReferenceList />
        <slot />
      </main>
      <Footer />
    </div>

    <script>
      function openSideBar() {
        window.alert('Epa, chamo')
      }

      function closeSideBar() {}
    </script>
  </body>
</html>

<style is:global>
  .container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    margin: auto;
    padding: 0;
    min-height: 100vh;
    max-width: 100vw;
  }

  .open-list {
    width: fit-content;
    height: fit-content;

    display: none;
  }

  main {
    display: grid;
    grid-template-columns: auto auto;
    width: 100%;
    margin: auto;
    margin-top: 64px;
  }

  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  @media (width <= 768px) {
    .open-list {
      display: block;
    }
  }
</style>
