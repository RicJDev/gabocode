---
import Layout from './Layout.astro'
import ReferenceList from '../components/ReferenceList.astro'
---

<Layout>
  <div>
    <ReferenceList />
    <article>
      <slot />
    </article>
  </div>
</Layout>

<style is:global>
  article > * + * {
    margin-block: var(--size-4);
  }
</style>

<style>
  div {
    display: flex;
    flex-direction: row;
  }

  article {
    padding: 0 var(--size-4);
    margin: auto;
  }
</style>
