---
import ReferenceList from '../components/ReferenceList.astro'
import Article from '../components/Article.astro'
import Section from './Section.astro'
---

<Section sectionTitle="Referencia">
  <ReferenceList slot="section-nav" />

  <slot>
    <Article />
  </slot>
</Section>

<style is:global>
  article h2 {
    align-self: center;
    text-align: center;
    margin: auto;
    color: var(--primary);
    max-width: var(--size-13);
  }

  article h3 {
    border-bottom: var(--secondary) solid var(--size-0);
  }

  article a {
    text-decoration: none;
    color: inherit;
    border-bottom: var(--accent) solid var(--size-0);
  }
</style>
