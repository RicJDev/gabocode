---
import Layout from './Layout.astro'
import Article from '../components/Article.astro'

interface Props {
  sectionTitle: string
}

const { sectionTitle } = Astro.props
---

<Layout>
  <div class="section">
    <aside class="section-nav">
      <h2>{sectionTitle}</h2>
      <nav class="section-nav">
        <slot name="section-nav">
          <ul>
            <li>No hay nada</li>
          </ul>
        </slot>
      </nav>
    </aside>

    <Article>
      <slot />
    </Article>
  </div>
</Layout>

<style>
  .section {
    display: flex;
  }

  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: calc(100vh - var(--size-9));
    width: var(--size-12);
    position: sticky;
    top: var(--size-9);
    overflow-y: auto;
    padding: var(--size-4);
    background: var(--background);
    border-right: var(--primary) var(--size-1) solid;
  }

  h2 {
    color: var(--accent);
    margin-bottom: var(--size-4);
  }

  nav {
    border: var(--size-0) solid var(--primary);
    border-radius: var(--size-1);
    padding: var(--size-4);
    width: 100%;
  }

  li, ul {
    list-style-type: none;
    padding-inline: 0;
    margin-inline: 0;
  }

  @media (width <= 970px) {
    aside {
      display: none;
    }
  }
</style>
