---
import Layout from './Layout.astro'
import Article from '../components/Article.astro'
import { IconLayoutSidebar } from '@tabler/icons-react'

interface Props {
  sectionTitle: string
}

const { sectionTitle } = Astro.props
---

<Layout>
  <span>
    <button class="open-section-nav">
      <IconLayoutSidebar className="icon" />
      <p>{sectionTitle}</p>
    </button>
  </span>

  <div class="section">
    <aside class="section-nav">
      <h2>{sectionTitle}</h2>
      <nav class="section-nav">
        <slot name="section-nav">
          <ul>
            <li>No hay nada</li>
          </ul>
        </slot>
      </nav>
    </aside>

    <Article>
      <slot />
    </Article>
  </div>

  <script>
    const $openSectionNav = document.querySelector('.open-section-nav')
    const $sectionNav = document.querySelector('.section-nav')

    $openSectionNav?.addEventListener('click', () => {
      $sectionNav?.classList.toggle('oppened')
    })
  </script>
</Layout>

<style>
  .section {
    display: flex;
  }

  .icon {
    width: var(--size-6);
    height: var(--size-6);
  }

  span {
    display: none;
    background: var(--background);
    border-bottom: var(--size-1) var(--secondary) solid;
  }

  button {
    border: 0;
    background: var(--background);
    color: var(--accent);
    width: fit-content;
    height: fit-content;
  }

  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: calc(100vh - var(--size-9));
    width: var(--size-12);
    position: sticky;
    top: var(--size-9);
    overflow-y: auto;
    padding: var(--size-4);
    background: var(--background);
    border-right: var(--primary) var(--size-1) solid;
  }

  aside.oppened {
    left: 0;
  }

  h2 {
    color: var(--accent);
    margin-bottom: var(--size-4);
  }

  nav {
    border: var(--size-0) solid var(--primary);
    border-radius: var(--size-1);
    padding: var(--size-4);
    width: 100%;
  }

  li,
  ul {
    list-style-type: none;
    padding-inline: 0;
    margin-inline: 0;
  }

  @media (width <= 970px) {
    aside {
      position: fixed;
      top: calc(var(--size-9) + var(--size-7));
      padding: var(--size-4);
      width: 100%;
      left: -100%;
      height: 100%;
      z-index: 8;
      background: var(--background);
      transition: left ease-in-out 300ms;
      border: 0;
    }

    h2 {
      display: none;
    }

    span {
      display: flex;
      position: sticky;
      top: var(--size-9);
      height: var(--size-7);
    }

    button {
      display: flex;
      align-items: center;
      gap: var(--size-2);
      margin: auto 0;
    }
  }
</style>
