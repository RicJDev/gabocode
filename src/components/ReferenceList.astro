---
import type { MarkdownInstance } from 'astro'

interface Fronmatter {
  title: string
  index: number
}

const matches = import.meta.glob<MarkdownInstance<Fronmatter>>('../pages/referencia/*.md', { eager: true })
const posts = Object.values(matches).toSorted((a, b) => a.frontmatter.index - b.frontmatter.index)
---

<aside class="reference-list">
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={post?.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</aside>

<style>
  aside {
    width: var(--size-11);
    background: var(--background);
  }

  ul {
    display: flex;
    flex-direction: column;
    list-style-type: none;
    margin-block: 0;
    padding-inline: 0;
    height: 100%;
  }

  li {
    display: block;
  }

  a {
    display: block;
    font-weight: 600;
    text-decoration: none;
    color: inherit;
  }
</style>
