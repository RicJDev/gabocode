---
import type { MarkdownInstance } from 'astro'

interface Fronmatter {
  title: string
  index: number
}

const matches = import.meta.glob<MarkdownInstance<Fronmatter>>('../pages/referencia/*.md', { eager: true })
const posts = Object.values(matches).toSorted((a, b) => a.frontmatter.index - b.frontmatter.index)
---

<ul>
  {
    posts.map((post) => (
      <li>
        <a href={post?.url}>{post.frontmatter.title}</a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    list-style-type: none;
    margin-block: 0;
    padding-inline: 0;
    gap: var(--size-3);
    height: 100%;
    width: 100%;
  }

  a,
  li {
    display: block;
    width: fit-content;
    text-align: left;
  }

  a {
    max-width: min-content;
    text-decoration: none;
    color: inherit;
    border-radius: var(--size-1);
    padding: var(--size-2);
  }

  a:hover {
    background: var(--link-hover);
  }

  @media (width <= 970px) {
    ul {
      justify-content: center;
      align-items: center;
      gap: var(--size-5);
    }

    a,
    li {
      display: inline;
    }
  }
</style>
