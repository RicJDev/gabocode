---
import Nav from './Nav.astro'
import Links from './Links.astro'
import Burger from '../../assets/hamburger.svg'
---

<header>
  <a href="/gabocode">
    <h1>Gabocode</h1>
  </a>

  <button class="burger">
    <Burger width={32} height={32}/>
  </button>

  <Nav />
  <Links />
</header>

<style>
  .burger {
    display: none;
    size: fit-content;
  }

  header {
    position: fixed;
    top: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    background: #fff;
    border-bottom: solid #bbd 1px;
    height: 128px;
  }

  a {
    padding: 16px;
    text-decoration: none;
    background: blue;
    height: inherit;
  }

  h1 {
    color: white;
  }

  @media (width <= 768px) {
    .burger {
      display: block;
    }
  }
</style>
