---
import Nav from './Nav.astro'
import Links from './Links.astro'
import {IconMenu2 as Burger} from '@tabler/icons-react'
---

<header>
  <a href="/gabocode">
    <h1>Gabocode</h1>
  </a>

  <button class="burger">
    <Burger />
  </button>

  <Nav />
  <Links />

  <script src="./script.js"></script>
</header>

<style>
  .burger {
    display: none;
    size: fit-content;
  }

  header {
    position: sticky;
    top: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    width: 100%;
    background: #fff;
    border-bottom: solid #bbd 1px;
  }

  a {
    padding: 16px;
    text-decoration: none;
    height: inherit;
  }

  h1 {
    color: inherit;
  }

  @media (width <= 768px) {
    .burger {
      display: block;
    }
  }
</style>
