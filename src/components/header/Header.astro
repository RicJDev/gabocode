---
import { IconMenu2, IconBook, IconBarbell, IconQuestionMark, IconUser } from '@tabler/icons-react'
---

<header>
  <a
    class="main-link"
    href="/gabocode"
  >
    <h1>Gabocode</h1>
  </a>

  <button class="open-nav">
    <IconMenu2 className="icon" />
  </button>

  <nav class="main-nav">
    <ul>
      <li>
        <a
          class="nav-link"
          href="/gabocode/referencia"
        >
          <IconBook className="icon" />
          <span> Referencia </span>
        </a>
      </li>
      <li>
        <a
          class="nav-link"
          href="/gabocode/ejercicios"
        >
          <IconBarbell className="icon" />
          <span> Ejercicios </span>
        </a>
      </li>
      <li>
        <a
          class="nav-link"
          href="/gabocode/sugerir-cambios"
        >
          <IconQuestionMark className="icon" />
          <span> Sugerir cambios </span>
        </a>
      </li>
      <li>
        <a
          class="nav-link"
          href="/gabocode/autor"
        >
          <IconUser className="icon" />
          <span> Sobre m√≠ </span>
        </a>
      </li>
    </ul>
  </nav>

  <script>
    const $navLinks: NodeListOf<HTMLLinkElement> = document.querySelectorAll('.nav-link')
    const location = window.location.pathname

    if (location != '/gabocode') {
      for (const $navLink of $navLinks) {
        const linkHref = $navLink.href
        const localPath = location.match(/\/gabocode\/[^\/]+/g) ?? ['']

        if (new RegExp(localPath[0]).test(linkHref)) {
          $navLink.classList.toggle('focused')
        }
      }
    }

    const $openMenu = document.querySelector('.open-nav')
    const $mainNav = document.querySelector('.main-nav')

    $openMenu?.addEventListener('click', () => {
      $mainNav?.classList.toggle('openned')
    })
  </script>
</header>

<style>
  button {
    display: none;
  }

  .icon {
    width: var(--size-5);
    height: var(--size-5);
  }

  ul,
  li {
    list-style: none;
    margin-block: 0;
    padding-inline: 0;
  }

  li {
    display: block;
  }

  ul,
  nav {
    display: flex;
    gap: var(--size-5);
    align-items: baseline;
  }

  header {
    width: 100%;
    height: var(--size-9);
    display: flex;
    flex-direction: row;
    align-items: center;
    position: sticky;
    top: 0;
    background: var(--background);
    padding: var(--size-5);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a.main-link {
    margin-right: auto;
  }

  a.nav-link {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  a.focused {
    color: var(--primary);
  }

  nav.main-nav.openned {
    right: 0;
  }

  @media (width <= 768px) {
    button {
      display: block;
    }

    header {
      align-items: center;
    }

    nav.main-nav {
      background: var(--background);
      position: fixed;
      right: -100%;
      height: 100%;
      z-index: 10;
      transition: right ease-in-out 300ms;
    }

    a.nav-link {
      flex-direction: row;
    }

    ul,
    nav.main-nav {
      flex-direction: column;
    }
  }
</style>
