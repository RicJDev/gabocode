---
import Nav from './Nav.astro'
import Links from './Links.astro'
---

<header>
  <a href="/gabocode">
    <h1>Gabocode</h1>
  </a>

  <Nav />
  <Links />
</header>

<style>
  header {
    position: fixed;
    top: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    background: #fff;
    border-bottom: solid #bbd 1px;
  }

  a {
    padding: 16px;
    text-decoration: none;
    background: blue;
  }

  h1 {
    color: white;
  }

  @media (width <= 768px) {
    header {
      flex-direction: column;
    }
  }
</style>
