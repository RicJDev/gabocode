---
import { IconMenu2, IconBook, IconBarbell, IconQuestionMark, IconUser } from '@tabler/icons-react'
---

<header>
  <a class="main-link" href="/gabocode">
    <h1>Gabocode</h1>
  </a>

  <button class="icon open-nav">
    <IconMenu2 height={"32px"} width={"32px"} />
  </button>

  <nav class="main-nav">
    <ul>
      <li>
        <a class="nav-link" href="/gabocode/referencia">
          <IconBook  height={"32px"} width={"32px"} />
          <span>
            Referencia
          </span>
        </a>
      </li>
      <li>
        <a class="nav-link" href="/gabocode/ejercicios">
          <IconBarbell height={"32px"} width={"32px"} />
          <span>
            Ejercicios
          </span>
        </a>
      </li>
      <li>
        <a class="nav-link" href="/gabocode/sugerir-cambios">
          <IconQuestionMark height={"32px"} width={"32px"} />
          <span>
            Sugerir cambios
          </span>
        </a>
      </li>
      <li>
        <a class="nav-link" href="/gabocode/autor">
          <IconUser height={"32px"} width={"32px"} />
          <span>
            Sobre m√≠
          </span>
        </a>
      </li>
    </ul>
  </nav>

  <script>
    const $navLinks: NodeListOf<HTMLLinkElement> = document.querySelectorAll('.nav-link')
    const location = window.location.pathname

    if (location != '/gabocode') {
      for (const $navLink of $navLinks) {
        const linkHref = $navLink.href
        const localPath = location.match(/\/gabocode\/[^\/]+/g) ?? ['']

        if (new RegExp(localPath[0]).test(linkHref)) {
          $navLink.classList.toggle('focused')
        }
      }
    }

    const $openMenu = document.querySelector('.open-nav')
    const $mainNav = document.querySelector('.main-nav')

    $openMenu?.addEventListener('click', () => {
      $mainNav?.classList.toggle('openned')
    })
  </script>
</header>

<style>
  button.icon {
    display: none;
    width: fit-content;
    height: fit-content;
  }

  ul, li {
    list-style: none;
    margin-block: 0;
    padding-inline: 0;
  }

  li {
    display: block;
  }

  ul, nav {
    display: flex;
    gap: 24px;
    align-items: baseline;
  }

  header {
    width: 100%;
    height: 96px;
    padding: 16px;
    border: solid 1px black;
    display: flex;
    flex-direction: row;
    align-items: center;

    position: sticky;
    top: 0;
    background: white;
  }

  a.main-link {
    margin-right: auto;
    color: inherit;
    text-decoration: none;
  }

  a.nav-link {
    color: #999;
    text-decoration: none;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition:
      color 200ms ease-in-out;
  }

  a.nav-link:hover {
    color: blue;
  }

  a.focused {
    color: inherit;
    position: relative;
  }

  a.focused:hover {
    color: inherit;
  }

  nav.main-nav.openned {
    right: 0;
  }

  @media (width <= 768px) {
    header {
      height: 64px;
      align-items: center;
    }

    nav.main-nav {
      background: white;
      position: fixed;
      top: 64px;
      width: 248px;
      right: -100%;
      height: 100%;
      z-index: 10;
      padding: 24px;

      gap: 32px;
      transition: right ease-in-out 300ms;
    }

    a.nav-link {
      flex-direction: row;
    }

    ul, nav.main-nav {
      flex-direction: column;
    }

    button.icon {
      display: block;
    }
  }
</style>
